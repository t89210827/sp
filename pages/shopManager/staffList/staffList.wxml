<!--pages/shopManager/staffList/staffList.wxml-->

<view class='top'>
  <wxc-progress activeColor='#5A94FF,#38B9FD' stroke-width='140' radius="0"></wxc-progress>
</view>

<view class="back" style='width:200rpx;height:140rpx;' bindtap="back">
  <image style='margin:60rpx 20rpx;width:34rpx;height:34rpx;' src="../../../images/back.png"></image>
</view>

<view class="title" style='width:750rpx;height:140rpx;' bindtap="back">
  <view style='text-align:center;line-height:140rpx;color:#fff;' class='zan-font-16'>客户信息</view>
</view>

<view style='height:140rpx;'></view>

<!-- <button bindtap='clickSwitch'>正序倒序</button> -->
<view style='height:90rpx; background-color:#ececec;' class='zan-font-14 center-style'>点击查看该员工下客户列表</view>

<view style='width:750rpx;'>
  <view style='width:94%;height:1000rpx;margin:20rpx 3%;box-shadow: 0px 0px 10px #E3F6FD;'>

    <scroll-view scroll-y style="height: 1000rpx;" bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-top='0'>

      <view style='position: relative;height:100rpx;border-bottom:1rpx solid #ececec;'>
        <view class='zan-row'>
          <view class='zan-col zan-col-4 zan-col-offset-2 zan-font-16 center-style' style='line-height:100rpx;'>头像</view>
          <view class='zan-col zan-col-8 zan-font-16 center-style' style='line-height:100rpx;'>顾客数量</view>
          <view class='zan-col zan-col-8 zan-font-16 center-style' style='line-height:100rpx;'>姓名</view>
        </view>
      </view>

      <block wx:for="{{staffList}}">
        <view style='position: relative;height:100rpx;border-bottom:1rpx solid #ececec;' bindtap='jumpClientList' data-auditid='{{item.auditDetails.id}}'>
          <view class='zan-row'>
            <view class='zan-col zan-col-2 zan-font-14' style='line-height:100rpx;text-align:center;'>{{index}}</view>
            <view class='zan-col zan-col-4'>
              <view class='center-style' style='height:100rpx;'>
                <image src='{{item.auditDetails.avatar}}' style='width:70rpx;height:70rpx;border-radius: 50%;'></image>
              </view>
            </view>
            <view class='zan-col zan-col-8 zan-font-16 center-style' style='line-height:100rpx;'>{{item.clientCount}}</view>
            <view class='zan-col zan-col-8 zan-font-16 center-style' style='line-height:100rpx;'>{{item.auditDetails.name}}</view>
            <view class=' zan-col zan-col-2 zan-arrow '></view>
          </view>
        </view>
      </block>

    </scroll-view>
  </view>
</view>