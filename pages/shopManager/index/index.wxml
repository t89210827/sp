<cover-view class='title-top-index zan-font-16' style='color:#fff'>
  <cover-view style='width:750rpx; height:120rpx;'>
    <cover-view class='zan-col zan-col-24' style='line-height:172rpx;text-align:center;'>{{shopName}}</cover-view>
  </cover-view>
</cover-view>

<view class='bg'>
  <view class='zan-font-16 ranking'>
    <view style='width:200rpx;height:60rpx;text-align:left;' bindtap='jumpRanking'>
      <view style='position: relative;width:200rpx;height:80rpx;margin:25rpx auto;'>
        <image src='../../../images/button.png' style='opacity: 0.5;width:200rpx;height:70rpx;'></image>
        <view style='position: absolute;top: 8rpx;left: 38rpx;'>业绩排行</view>
      </view>
    </view>
  </view>

  <view style='height:150rpx;'></view>
  <image bindtap='alterUserInfo' src='{{userInfo.avatar}}' style='width:120rpx;height:120rpx;border-radius: 50%;'></image>
  <view bindtap='alterUserInfo' class='zan-font-14' style='color:#fff;'>{{userInfo.name}}</view>
  <view class='zan-font-14' style='color:#fff;margin-bottom:10rpx;'>距离完成任务还剩{{shopManagerMonthTaskAmount.surplusMoney}}元</view>
  <view style='margin:0 50rpx;'>
    <wxc-progress percent="{{100-shopManagerMonthTaskAmount.finishPercentage}}" activeColor='#ff6f30,#fda92f' stroke-width='20'></wxc-progress>
  </view>

  <view class='zan-row zan-font-16' style='height:120rpx;color:#fff;'>
    <view class='zan-col zan-col-8 line-height' bindtap='jumpDailyList'>
      <view style='position: relative;width:200rpx;height:80rpx;margin:25rpx auto;'>
        <image src='../../../images/button.png' style='opacity: 0.5;width:200rpx;height:70rpx;'></image>
        <view style='position: absolute;top: 0rpx;left: 64rpx;'>审核</view>
      </view>
    </view>
    <view class='zan-col zan-col-8 line-height' bindtap='jumpIssueList'>
      <view style='position: relative;width:200rpx;height:80rpx;margin:25rpx auto;'>
        <image src='../../../images/button.png' style='opacity: 0.5;width:200rpx;height:70rpx;'></image>
        <view style='position: absolute;top: 0rpx;left: 64rpx;'>发布</view>
      </view>
    </view>
    <view class='zan-col zan-col-8 line-height' bindtap='jumpStaffList'>
      <view style='position: relative;width:200rpx;height:80rpx;margin:25rpx auto;'>
        <image src='../../../images/button.png' style='opacity: 0.5;width:200rpx;height:70rpx;'></image>
        <view style='position: absolute;top: 0rpx;left: 31rpx;'>客户信息</view>
      </view>
    </view>
  </view>
</view>


<view style='width:750rpx;'>
