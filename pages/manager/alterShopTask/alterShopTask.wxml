<!--pages/manager/alterShopTask/alterShopTask.wxml-->
<view class='top'>
  <wxc-progress activeColor='#5A94FF,#38B9FD' stroke-width='140' radius="0"></wxc-progress>
</view>

<view class="back" style='width:200rpx;height:140rpx;' bindtap="back">
  <image style='margin:60rpx 20rpx;width:34rpx;height:34rpx;' src="../../../images/back.png"></image>
</view>

<view class="title" style='width:750rpx;height:140rpx;' bindtap="back">
  <view style='text-align:center;line-height:140rpx;color:#fff;' class='zan-font-16'>修改该店铺任务</view>
</view>

<view style='height:140rpx;'></view>

<view style='width:750rpx;'>
  <view style='width:94%;margin:20rpx 3%;box-shadow: 0px 0px 10px #E3F6FD;'>

    <view style='margin:0 3%;'>
      <view class='zan-row' style='border-bottom:1rpx solid #ececec;height:120rpx;'>
        <view class='zan-c-gray-dark zan-col zan-col-10 zan-font-16' style='line-height:120rpx;'>黄铂：</view>
        <view class='zan-col zan-col-13'>

          <view class='flex-row' style='height:120rpx;align-items: center;float:right;'>
            <input class='zan-font-16' placeholder-style="text-align:right;" placeholder="请输入黄铂任务" bindinput='inputTask' id='2' style='line-height:120rpx;text-align:right;'></input>
          </view>
        </view>
      </view>
    </view>

    <view style='margin:0 3%;'>
      <view class='zan-row' style='border-bottom:1rpx solid #ececec;height:120rpx;'>
        <view class='zan-c-gray-dark zan-col zan-col-10 zan-font-16' style='line-height:120rpx;'>非黄铂：</view>
        <view class='zan-col zan-col-13'>

          <view class='flex-row' style='height:120rpx;align-items: center;float:right;'>
            <input class='zan-font-16' placeholder-style="text-align:right;" placeholder="请输入非黄铂任务" bindinput='inputTask' id='1' style='line-height:120rpx;text-align:right;'></input>
          </view>
        </view>
      </view>
    </view>

  </view>
</view>

<view style='height:20rpx;'></view>
<button style='height:80rpx;line-height:80rpx;background-color:#4aa5fe;width:88%;border-radius:20rpx;color:#fff;' bindtap='confirm'>提交</button>
<view style='height:50rpx;'></view>