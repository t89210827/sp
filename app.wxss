/**app.wxss**/
@import "./bower_components/zanui-weapp/dist/index.wxss";
@import "./style/weui.wxss";

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 顶部菜单样式 */

.top {
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  overflow: hidden;
  z-index: 500;
  width: 100%;
  height: 140rpx;
}

.title {
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  overflow: hidden;
  z-index: 505;
}

.back {
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  overflow: hidden;
  z-index: 510;
}

/* --------- */

.flex-row {
  display: flex;
  flex-direction: row;
}

.center-style {
  display: flex;
  justify-content: center;
  align-items: center;
}

.line-text {
  border-left: 5px solid #e75110;
  padding-left: 20rpx;
}
